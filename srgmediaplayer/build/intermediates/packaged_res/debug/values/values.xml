<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="black">#000000</color>
    <color name="black_shadow">#7d000000</color>
    <color name="thumb">#bdbdbd</color>
    <color name="white">#FFFFFFFF</color>
    <color name="white_54">#89ffffff</color>
    <dimen name="notification_image_size">72dp</dimen>
    <dimen name="player_control_duration_text_width">48sp</dimen>
    <dimen name="player_control_height">48dp</dimen>
    <dimen name="player_control_width">48dp</dimen>
    <dimen name="segment_player_control_margin_inner">8dp</dimen>
    <dimen name="segment_player_control_recycler_view_item_height">150dp</dimen>
    <dimen name="segment_player_control_recycler_view_item_width">200dp</dimen>
    <string name="time_pending" translatable="true">--:--</string>
    <declare-styleable name="SRGMediaPlayerView">
        <attr name="containerAspectRatio">
            <flag name="auto" value="0"/>
            <flag name="square" value="1"/>
            <flag name="standard_4_3" value="2"/>
            <flag name="wide_16_10" value="3"/>
            <flag name="hdvideo_16_9" value="4"/>
            <flag name="movie_21_9" value="5"/>
        </attr>
        <attr name="videoScale">
            <flag name="center_inside" value="0"/>
            <flag name="top_inside" value="1"/>
            <flag name="center_crop" value="2"/>
            <flag name="fit" value="3"/>
        </attr>
        <attr format="boolean" name="adjustToParentScrollView"/>
    </declare-styleable>
    <declare-styleable name="SegmentView">
		<attr format="color" name="text_color"/>
		<attr format="color" name="selected_text_color"/>
		<attr format="color" name="selected_background"/>
	</declare-styleable>
</resources>